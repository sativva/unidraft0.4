<div data-hook="admin_designer_form_fields" class="row">
  <div class="col-md-6">
    <%= f.field_container :lastname, class: ['form-group'] do %>
      <%= f.label :lastname, Spree.t(:lastname) %>
      <%= f.text_field :lastname, class: 'form-control' %>
      <%= f.error_message_on :lastname %>
    <% end %>
  </div>
  <div class="col-md-6">
    <%= f.field_container :givenname, class: ['form-group'] do %>
      <%= f.label :givenname, Spree.t(:givenname) %>
      <%= f.text_field :givenname, class: 'form-control' %>
      <%= f.error_message_on :givenname %>
    <% end %>
  </div>
  <div class="col-md-6">
    <%= f.field_container :school, class: ['form-group'] do %>
      <%= f.label :school, Spree.t(:school) %>
      <%= f.text_field :school, class: 'form-control' %>
      <%= f.error_message_on :school %>
    <% end %>
  </div>
  <div class="col-md-6">
    <%= f.field_container :linkedin, class: ['form-group'] do %>
      <%= f.label :linkedin, Spree.t(:linkedin) %>
      <%= f.text_field :linkedin, class: 'form-control' %>
      <%= f.error_message_on :linkedin %>
    <% end %>
  </div>
  <div class="col-md-6">
    <%= f.field_container :facebook, class: ['form-group'] do %>
      <%= f.label :facebook, Spree.t(:facebook) %>
      <%= f.text_field :facebook, class: 'form-control' %>
      <%= f.error_message_on :facebook %>
    <% end %>
  </div>
  <div class="col-md-6">
    <%= f.field_container :instagram, class: ['form-group'] do %>
      <%= f.label :instagram, Spree.t(:instagram) %>
      <%= f.text_field :instagram, class: 'form-control' %>
      <%= f.error_message_on :instagram %>
    <% end %>
  </div>
  <div class="col-md-6">
    <%= f.field_container :website, class: ['form-group'] do %>
      <%= f.label :website, Spree.t(:website) %>
      <%= f.text_field :website, class: 'form-control' %>
      <%= f.error_message_on :website %>
    <% end %>
  </div>
  <%= tinymce %>
  <%= tinymce_assets %>
  <div class="col-md-12">
    <%= f.field_container :interview, class: ['form-group'] do %>
      <%= f.label :interview, Spree.t(:interview) %>
      <%= f.text_area :interview, class: 'form-control tinymce',rows: 40, cols: 120 %>
      <%= f.error_message_on :interview %>
    <% end %>
  </div>

  <div class="col-md-6">
    <%= f.field_container :avatar, class: ['form-group'] do %>
      <%= f.label :avatar, Spree.t(:avatar) %>
      <%= f.file_field :avatar, class: 'form-control' %>
      <%= f.error_message_on :avatar %>
    <% end %>
    <% unless @designer.avatar.url == '/images/original/missing.png' %>
        <%= cl_image_tag @designer.avatar.url(:thumb) %>
    <% end %>
  </div>

  <div class="col-md-6">
    <%= f.field_container :banner, class: ['form-group'] do %>
      <%= f.label :banner, Spree.t(:banner) %>
      <%= f.file_field :banner, class: 'form-control' %>
      <%= f.error_message_on :banner %>
    <% end %>
    <% unless @designer.banner.url == '/images/original/missing.png' %>
        <%= cl_image_tag @designer.banner.url(:thumb) %>
    <% end %>
  </div>



<%#= f.input :photos, as: :attachinary %>

</div>

