<% content_for :page_title do %>
  <%= Spree.t(:designers) %>
<% end %>
<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:new_designer), new_admin_designer_url, class: "btn-success", icon: 'add', id: 'admin_new_designer_link' %>
<% end %>
<table class="table" id="listing_designers" data-hook>
  <thead>
    <tr data-hook="admin_designers_index_headers">
      <th>
        <%= Spree.t(:designer) %>
      </th>
      <th data-hook="admin_designers_index_header_actions" class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <% @designers.each do |designer|%>
      <tr id="<%= spree_dom_id designer %>" data-hook="admin_designers_index_rows">
        <td class='designer_email'><%= designer.lastname %></td>
        <td data-hook="admin_designers_index_row_actions" class="actions actions-2 text-right">
          <%= link_to_edit designer, no_text: true, controller: 'spree/admin/designers' %>
          <%= link_to_delete designer, no_text: true %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

