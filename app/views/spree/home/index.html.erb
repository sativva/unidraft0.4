      <header>
        <div class="container">
         <%= cl_image_tag("Unidraft_shoot_3f_v3_rlcdhz.jpg", :gravity=>"faces:auto", :height=>940, :width=>2048, :x=>704, :y=>1718, :crop=>"crop", class: 'home-banner') %>
         <div class="typewriter">
           <h1>Shoppez - Votez</h1>
