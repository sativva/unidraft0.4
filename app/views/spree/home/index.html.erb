<!-- GRID -->
      <div class="grid-masonry">
        <div class="grid-item grid-sizer">
          <%= link_to draft_path(@drafts_on_top[0]) do  %>
            <%= image_tag(@drafts_on_top[0].images[0].attachment.url(:large)) %>
            <div class="hover" style="display: none">
              <div class="content-block">
                <h4><%= @drafts_on_top[0].name %></h4>
              </div>
            </div>
          <% end %>
          <% if spree_current_user %>
            <div class="inline">
              <div class="likes inline" id="likes_<%= @drafts_on_top[0].id %>" >
                <div class="likes_count" style="margin-right: 10px;"><%= (display_likes @drafts_on_top[0]).to_i + 20 %></div>

              <% if spree_current_user.liked? @drafts_on_top[0] %>
                <%= link_to '', unvote_product_path(@drafts_on_top[0].id), remote: true,
                                      id: "like_#{@drafts_on_top[0].id}",
                                      class: "glyphicon glyphicon-heart" %>
              <% else %>
                <%= link_to '', vote2_product_path(@drafts_on_top[0].id), remote: true,
                                      id: "like_#{@drafts_on_top[0].id}",
                                      class: "glyphicon glyphicon-heart-empty" %>
              <% end %>
              <p class="connect" style="margin-left: 10px; line-height: 36px;">Votez !</p>
              </div>
            </div>
          <% else %>
            <div class="likes inline" id="likes_<%= @drafts_on_top[0].id %>">
