                <%= link_to '', vote2_product_path(@drafts_on_top[1].id), remote: true,
                                      id: "like_#{@drafts_on_top[1].id}",
                                      class: "glyphicon glyphicon-heart-empty" %>
              <% end %>
              <p class="connect" style="margin-left: 10px; line-height: 36px;">Votez !</p>

               </div>
            </div>
          <% else %>
            <div class="likes inline" id="likes_<%= @drafts_on_top[1].id %>">
              <div class="likes_count" style="margin-right: 10px;"><%= (display_likes @drafts_on_top[1]).to_i + 20 %></div>
              <%= link_to '',"#connect-modal",  id: "like_#{@drafts_on_top[1].id}",
                                      class: "glyphicon glyphicon-heart-empty", "data-toggle" => "modal"  %>
              <p class="connect" style="margin-left: 10px; line-height: 36px;">Votez !</p>
            </div>

          <% end %>
        </div>

        <div class="grid-item">
          <%= link_to draft_path(@drafts_on_top[2]) do  %>
            <%= image_tag(@drafts_on_top[2].images[0].attachment.url(:large)) %>
            <p class="home-mobile-price hidden-sm hidden-md hidden-lg"><%= @product2.price.to_i %> € </p>

            <div class="hover" style="display: none">
              <div class="content-block">
                <h4><%= @drafts_on_top[2].name %></h4>
              </div>
            </div>
          <% end %>
          <% if spree_current_user %>
            <div class="inline">
              <div class="likes inline" id="likes_<%= @drafts_on_top[2].id %>" >
                <div class="likes_count" style="margin-right: 10px;"><%= (display_likes @drafts_on_top[2]).to_i + 20 %></div>

              <% if spree_current_user.liked? @drafts_on_top[2] %>
                <%= link_to '', unvote_product_path(@drafts_on_top[2].id), remote: true,
                                      id: "like_#{@drafts_on_top[2].id}",
