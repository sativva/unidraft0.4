<% content_for :page_title do %>
  <%= link_to Spree.t(:designers), spree.admin_designers_url %> /
  <%= Spree.t(:new_designer) %>
<% end %>

<div data-hook="admin_designer_new_form_header">
  <%= render partial: 'spree/admin/shared/error_messages', locals: { target: @designer } %>
</div>

<div data-hook="admin_designer_new_form">
  <%= form_for [:admin, @designer], url: spree.admin_designers_url, method: :post do |f| %>
    <%= render partial: 'form', locals: { f: f } %>

    <div data-hook="admin_designer_new_form_buttons">
      <%= render partial: 'spree/admin/shared/new_resource_links' %>
    </div>
  <% end %>
</div>
